<Application x:Class="App_API.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:App_API"
             StartupUri="Windows/Authorization.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="UploadElement">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                
                                <Image Source="/Resources/Icons/Upload.png" />

                                <TextBlock Text="ПРИКРЕПИТЬ ФАЙЛ"
                                           VerticalAlignment="Center"
                                           Margin="5 0 0 0"
                                           FontSize="10"
                                           FontWeight="SemiBold"
                                           Foreground="#7f7e7c"/>

                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
